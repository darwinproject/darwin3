cadj SUBROUTINE global_sum_r8 DEPEND  = 2
cadj SUBROUTINE global_sum_r8 ADNAME  = global_adsum_r8
cadj SUBROUTINE global_sum_r8 FTLNAME = global_sum_r8

cadj SUBROUTINE global_sum_tile_rl INPUT   = 1,    3
